<h1>Add media to your library</h1>

<div class="row marketing" style="margin-top: 30px">
  <div class="col-lg-6">
    <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th><th></th>
      </tr>
    </thead>

    <tbody>
      <% @media_items.each do |item| %>
        <tr>
          <td><%= link_to item.title, item %> (<%= item.type.name %>) </td>
          <td><%= link_to "Add", ownerships_path(:ownership => {:user => current_user, :media_item => item}), :method => :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

  <div class="col-lg-6">
     <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class="panel-title">Or create a new one!</h3>
        </div>
        <div class="panel-body">
          <%= render 'form' %>
        </div>
      </div>
  </div>
</div>