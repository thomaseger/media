<h1><%=@media_item.title %></h1>

<% if ENV["FT_BORROW"] == "true" %>
<p>
  <% if @media_item.borrowed? %>
    Lend to <%= @media_item.borrower_name %>
  <% else %>
    <strong>This <%= @media_item.type.name %> is available.</strong>
  <% end %>
</p>
<% end %>

<p>Link: <%=link_to @media_item.link, @media_item.link, :target => "_blank" %></p>
<p>Creator: <%=@media_item.user.name %></p>
<p>Type: <%=@media_item.type.name %></p>

<p>Owners</p>
<ul>
<% @media_item.users.uniq.each do |user| %>
  <li><%= link_to user.name, user %></li>
<% end %>
</ul>