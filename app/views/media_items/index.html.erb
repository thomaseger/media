<h1>Media</h1>
<%= render 'dashboard' %>
<table class="table table-striped table-hover">
  <thead>
  	<tr>
  		<th>Title</th><th>Link</th><th>Type</th><th style="text-align: center;">Available copies</th>
  	</tr>
  </thead>

  <tbody>
    <% @media_items.each do |media_item| %>
      <tr>
        <td><%=link_to media_item.title, media_item %></td>
        <td><%=link_to media_item.link, media_item.link %></td>
        <td><%= media_item.type.name %></td>
        <td style="text-align: center;"><span class="badge"><%= media_item.available %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
