<h1>All media items </h1>
<% @media_items.each do |media_item| %>
  <p>
  	<%=link_to media_item.title, media_item %><br/>
  	<small>
  		(A <%= media_item.type.name %> from <%= current_user.name %>. 
  		<% if ENV['FT_BORROW'] == 'true' %>
		  	<% if media_item.borrowed_from? %>
			 Borrowed from <%= User.find(media_item.borrowed_from).name %>.
			<% else %>
			 <a href="todo">Borrow</a>...
			<% end %>
		<% end %>)
	</small>
  </p>
<% end %>
