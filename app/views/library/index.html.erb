<h1>Library </h1>

<table class="table table-striped table-hover">
  <thead>
  	<tr>
  		<th>Title</th><th>Link</th><th>Type</th><th></th>
  	</tr>
  </thead>

  <tbody>
    <% @media_items.each do |media_item| %>
      <tr>
        <td><%=link_to media_item.title, media_item %></td>
        <td><%=link_to media_item.link, media_item.link %></td>
        <td><%= media_item.type.name %></td>
        <% if ENV['FT_BORROW'] == 'true' %>
        <td>
          <% if media_item.available == 0 %>
            <span class="glyphicon glyphicon-minus-sign" title="Lent"></span>
          <% else %>
            <%= link_to raw('<span class="glyphicon glyphicon-share"></span>') , new_borrow_receipt_path(:media_item => media_item) %>
            &nbsp;&nbsp;
            <%= link_to raw('<span class="glyphicon glyphicon-remove"></span>'), ownership_path(media_item.ownerships.first), :data => { :confirm => "Are you sure?" }, :method => :delete %>
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
